<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>
<body>
  <h1>Happy New Year</h1>
  <% if ( isLogined ) { %>
    <div>
      <button class="toresvbtn">Reservation</button>
      <button class="logoutbtn" type="submit" formaction="/logout" formmethod="GET">Logout</button>
    </div>
  <% } else { %>
    <div>
      <button class="tologinbtn">Login</button>
    </div>
  <% } %>  
  <script>

    let reserveBtn = document.querySelector(".toresvbtn");
    let loginBtn = document.querySelector(".tologinbtn");
    let logoutBtn = document.querySelector(".logoutbtn");

    const xhr = new XMLHttpRequest();

    if ( reserveBtn && logoutBtn ) {
      reserveBtn.addEventListener('click', () => {
        console.log('toreserve');
        window.location.href = "/form";
      });
      logoutBtn.addEventListener('click', () => {
        xhr.open('GET', '/logout');
        xhr.onreadystatechange = function() {
          if (xhr.readyState === xhr.DONE) {
            if (xhr.status === 200) {
              console.log('logouted');
              window.location.reload();
            } else {
              console.log(xhr.responseText);
            }
          }
        }
        xhr.send();
      })
    };

    if ( loginBtn ) {
      loginBtn.addEventListener('click', () => {
      console.log('tologin');
      window.location.href = "/login";
      });
    };

  </script>
</body>
</html>